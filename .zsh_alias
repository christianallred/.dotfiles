alias tm="~/.scripts/tmux_session.sh"
alias p=". ~/.scripts/project.sh"
alias pn=". ~/.scripts/projectnvim.sh"
alias dot="cd ~/.dotfiles"


# Tava
alias yc="yarn codegen" 
alias yct="yarn codgen:test"

alias feather:up="docker-compose -f ~/proj/feather/docker/docker-compose.yml up -d"
alias feather:down="docker-compose -f ~/proj/feather/docker/docker-compose.yml down"

alias db-prod-write="tava-cli db authenticate --auto --write-production --username ChristianAllred"
alias db-prod="tava-cli db authenticate --auto --production --username ChristianAllred"
